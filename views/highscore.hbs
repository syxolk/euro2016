{{#> layout}}
{{#*inline "head"}}
<style type="text/css">
.ordered-column {
    color: #1d3;
}
.is-zero {
    color: #bbb;
}
</style>
<link rel="canonical" href="/highscore">
<title>Highscore - Euro 2016</title>
{{/inline}}
{{#*inline "body"}}
{{> navbar}}
<div class="container">
<table class="table table-striped">
<tr>
    <th></th>
    <th>
    {{#if orderName}}
        <span class="ordered-column">Name</span>
    {{else}}
        <a href="/highscore?order=name">Name</a>
    {{/if}}
    </th>
    <th>
    {{#if orderScore}}
        <span class="ordered-column">Punkte</span>
    {{else}}
        <a href="/highscore">Punkte</a>
    {{/if}}
    </th>
    <th title="Correct bet">
    {{#if order3}}
        <span class="ordered-column"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></span>
    {{else}}
        <a href="/highscore?order=3"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></a>
    {{/if}}
    </th>
    <th title="Correct goal difference">
    {{#if order2}}
        <span class="ordered-column"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-o"></i></span>
    {{else}}
        <a href="/highscore?order=2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-o"></i></a>
    {{/if}}
    </th>
    <th title="Correct winner">
    {{#if order1}}
        <span class="ordered-column"><i class="fa fa-star"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i></span>
    {{else}}
        <a href="/highscore?order=1"><i class="fa fa-star"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i></a>
    {{/if}}
    </th>
    <th title="Wrong bet">
    {{#if order0}}
        <span class="ordered-column"><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i></span>
    {{else}}
        <a href="/highscore?order=0"><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i></a>
    {{/if}}
    </th>
</tr>
{{#each users}}
<tr>
    <td>{{rank}}.</td>
    <td>
        {{#if isme}}<i class="fa fa-user" title="That's you!"></i>{{/if}}
        <a href="{{@origin}}/user/{{id}}">{{name}}</a>
    </td>
    <td class="{{#if (isZero score)}}is-zero{{/if}}">{{score}}</td>
    <td class="{{#if (isZero count3)}}is-zero{{/if}}">{{count3}}</td>
    <td class="{{#if (isZero count2)}}is-zero{{/if}}">{{count2}}</td>
    <td class="{{#if (isZero count1)}}is-zero{{/if}}">{{count1}}</td>
    <td class="{{#if (isZero count0)}}is-zero{{/if}}">{{count0}}</td>
</tr>
{{/each}}
</table>
</div>
{{/inline}}
{{/layout}}
